<div>
  <h1 class="font-bold text-4xl">Products#show</h1>
  <p>Find me in app/views/products/show.html.erb</p>
</div>

<div class="flex items-center justify-between border-b border-gray-200 py-4">
  <div class="flex items-center">
    <img src="<%= @product.images.first.attachment.url %>" class="w-20 h-20 object-cover" alt="<%= @product.name %>">
    <div class="ml-4">
      <h2 class="font-bold text-lg"><%= @product.name %></h2>
      <p class="text-gray-500"><%= @product.display_price %></p>
    </div>
  </div>
</div>

<%= form_with url: "/" do |f| %>
  <%= f.hidden_field :variant_id, value: @product.master.id %>
  <%= f.hidden_field :quantity, value: 1 %>
  <%= f.submit "Add to cart", class: "bg-blue-500 text-white px-4 py-2" %>
<% end %>
